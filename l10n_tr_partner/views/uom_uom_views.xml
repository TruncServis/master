<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_uom_code_form" model="ir.ui.view">
        <field name="name">uom.uom.code.form</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view"/>
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field name="uom_code"/>
            </field>
        </field>
    </record>

    <record id="view_uom_code_tree" model="ir.ui.view">
        <field name="name">uom.uom.code.tree</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_tree_view"/>
        <field name="arch" type="xml">
            <field name="uom_type" position="after">
                <field name="uom_code"/>
            </field>
        </field>
    </record>
</odoo>
